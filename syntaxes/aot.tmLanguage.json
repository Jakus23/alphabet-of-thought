{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "alphabet of thought",
    "fileTypes": ["json"],
	"patterns": [
		{
            "name": "keyword.control.custom",
            "match": "[A-Z].*"
        },
        
        {
            "name": "variable.parameter.custom",
            "match": "\\b[a-z]\\w*\\b"
        },
        {
            "name": "string.unquoted.custom",
            "match": ":.*$"
        },
        {
            "name": "string.unquoted.custom",
            "match": "-.*$"
        },
        {
            "name": "string.note.custom",
            "match": "`.*$"
        },
        {
            "name": "string.note.customa",
            "match": "\"([^\"]*)\""
        },
        {
            "name": "keyword.control.custom",
            "match": "~.*"
        }
        
	],
	"scopeName": "source.aot"
}